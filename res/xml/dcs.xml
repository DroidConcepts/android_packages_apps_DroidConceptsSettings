<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Performance Settings -->
<PreferenceCategory android:title="@string/performance_title">
    <PreferenceScreen android:key="performance_settings"
                      android:title="@string/performance_settings_title" 
                      android:summary="@string/performance_settings_summary">
            <intent android:action="android.intent.action.MAIN"
                    android:targetPackage="com.droidconcepts.settings"
                    android:targetClass="com.droidconcepts.settings.activities.PerformanceSettingsActivity" />
    </PreferenceScreen>  
    <PreferenceScreen android:key="cpu_settings"
	              android:title="@string/cpu_title"
		      android:summary="@string/cpu_summary">
            <intent android:action="android.intent.action.MAIN"
		    android:targetPackage="com.droidconcepts.settings"
		    android:targetClass="com.droidconcepts.settings.activities.CPUActivity" />
    </PreferenceScreen>
</PreferenceCategory>

</PreferenceScreen>
